---
import { SITE_CONFIG } from "../config";
import ThemeToggle from "./ThemeToggle";
import LoginButton from "./LoginButton";
import { getAssetPath } from "../utils/paths";
---

<header class="header-inner" transition:persist>
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="text-xl font-bold" transition:persist>
        {SITE_CONFIG.title}
      </a>
      <nav class="flex items-center gap-6" transition:persist>
        <a href={getAssetPath("/")}>Home</a>
        <a href={getAssetPath("/archive")}>Archive</a>
        <a href={getAssetPath("/about")}>About</a>
        <a href={SITE_CONFIG.social.github} target="_blank" class="nav-link">
          GitHub
        </a>
        <LoginButton client:load />
        <ThemeToggle client:load />
      </nav>
    </div>
  </div>
</header>

<style>
  .header-inner {
    contain: layout style paint;
    transform: translateZ(0);
    will-change: transform;
  }

  .nav-link {
    @apply hover:text-primary transition-colors;
  }
</style>
