---
import { SITE_CONFIG } from "../config";
import ThemeToggle from "./ThemeToggle.astro";
import LoginButton from "./LoginButton";
---

<header
  class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800"
>
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="text-xl font-bold">
        {SITE_CONFIG.title}
      </a>
      <nav class="flex items-center gap-6">
        <a href="/" class="hover:text-primary transition-colors">Home</a>
        <a href="/archive" class="hover:text-primary transition-colors"
          >Archive</a
        >
        <a href="/about" class="hover:text-primary transition-colors">About</a>
        <a
          href={SITE_CONFIG.social.github}
          target="_blank"
          class="hover:text-primary transition-colors">GitHub</a
        >
        <LoginButton client:load />
        <ThemeToggle />
      </nav>
    </div>
  </div>
</header>
