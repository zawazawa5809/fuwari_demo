---
import Profile from "./Profile.astro";
import Categories from "./Categories.astro";
import Tags from "./Tags.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
---

<aside class="sidebar">
  <div class="sticky-container">
    <div class="profile">
      <img src="/images/avatar.png" alt="Profile" class="profile-image" />
      <h2>Fuwari</h2>
      <p>Frontend developer.</p>
    </div>
    <Categories posts={posts} />
    <Tags posts={posts} />
  </div>
</aside>

<style>
  .sidebar {
    width: 200px;
    padding: 20px;
    background: var(--color-card);
    border-radius: var(--radius-base);
  }

  .sticky-container {
    position: sticky;
    top: 2rem;
  }

  .profile {
    margin-bottom: 20px;
    text-align: center;
  }

  .profile-image {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin: 0 auto 10px;
    display: block;
  }

  .sidebar-section {
    margin-bottom: 2rem;
  }

  .sidebar-section:last-child {
    margin-bottom: 0;
  }

  .sidebar-heading {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-text);
    border-bottom: 2px solid var(--color-border);
    padding-bottom: 0.5rem;
  }

  .category-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .category-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .category-link:hover {
    color: var(--color-primary);
  }

  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-link {
    color: var(--color-text-light);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .tag-link:hover {
    color: var(--color-primary);
  }

  .count {
    font-size: 0.8rem;
    color: var(--color-text-light);
    margin-left: 0.3rem;
  }
</style>
