---
import { SITE_CONFIG, PROFILE_CONFIG } from "../config";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Banner from "../components/Banner.astro";
import SidebarNav from "../components/SidebarNav.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  isHome?: boolean;
  toc?: { id: string; text: string; depth?: number }[];
}

const {
  title = SITE_CONFIG.title,
  description = SITE_CONFIG.description,
  image = SITE_CONFIG.ogImage,
  isHome = false,
  toc,
} = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href={canonicalURL} />
    <title>{title} - {SITE_CONFIG.title}</title>
    <ViewTransitions fallback="none" />

    <script>
      // Persistent elements during page transitions
      document.addEventListener("astro:before-preparation", (e) => {
        const event = e as unknown as App.BeforePreparationEvent;
        const banner = document.querySelector(".banner-container");
        const sidebar = document.querySelector(".sidebar-nav");
        if (banner) event.persist(banner);
        if (sidebar) event.persist(sidebar);
      });
    </script>
  </head>

  <body class="bg-gray-50 dark:bg-gray-900">
    <div class="relative min-h-screen flex flex-col overflow-x-hidden">
      <header
        class="header-wrapper w-full sticky top-0 z-50 bg-white dark:bg-gray-900 shadow-sm"
        transition:persist="header"
      >
        <div class="container mx-auto">
          <Header />
        </div>
      </header>

      <div class="banner-wrapper w-full" transition:persist="banner">
        <div class="container mx-auto">
          <Banner isHome={isHome} />
        </div>
      </div>

      <div class="flex-1">
        <div class="container mx-auto px-4 py-8">
          <div class="flex flex-col lg:flex-row gap-8">
            <aside
              class="lg:w-64 lg:flex-shrink-0"
              transition:persist="sidebar"
              style="contain: style layout;"
            >
              <div class="lg:sticky lg:top-8">
                <SidebarNav />
              </div>
            </aside>
            <main
              class="flex-1"
              transition:animate="slide"
              style="contain: style layout;"
            >
              <slot />
            </main>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<script>
  // 永続要素の事前準備
  document.addEventListener("astro:before-preparation", (e) => {
    const event = e as unknown as App.BeforePreparationEvent;
    ["header", "banner-wrapper", "sidebar"].forEach((selector) => {
      const element = document.querySelector(`.${selector}`);
      if (element) event.persist(element);
    });
  });

  // ページ遷移後の処理
  document.addEventListener("astro:after-navigation", () => {
    const main = document.querySelector("main");
    if (main) {
      main.tabIndex = -1;
      main.focus({ preventScroll: true });
    }

    // スムーズスクロールの制御
    if (!document.querySelector("[data-astro-transition]")) {
      window.scrollTo({ top: 0, behavior: "smooth" });
    } else {
      window.scrollTo({ top: 0 });
    }
  });

  // 画像の遅延ロード
  document.addEventListener("astro:page-load", () => {
    if ("loading" in HTMLImageElement.prototype) {
      document
        .querySelectorAll<HTMLImageElement>("img[loading='lazy']")
        .forEach((img) => {
          if (img.dataset.src) {
            img.src = img.dataset.src;
          }
        });
    }
  });
</script>

<style is:global>
  /* Base transitions */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
    transform: translateZ(0);
    will-change: transform;
  }

  /* Fix layout shifts */
  html,
  body {
    overflow-x: hidden;
    width: 100%;
    position: relative;
  }

  /* Persistent elements with fixed positioning */
  .header-wrapper {
    position: sticky;
    top: 0;
    z-index: 50;
    view-transition-name: header;
    contain: layout style paint;
    transform: translateZ(0);
    will-change: transform;
    width: 100%;
  }

  .banner-wrapper {
    view-transition-name: banner;
    contain: layout style paint;
    transform: translateZ(0);
    will-change: transform;
    width: 100%;
  }

  #sidebar-wrapper {
    view-transition-name: sidebar;
    contain: layout style paint;
    transform: translateZ(0);
    will-change: transform;
  }

  /* Prevent flickering and layout shifts during transitions */
  ::view-transition-group(*),
  ::view-transition-old(*),
  ::view-transition-new(*) {
    animation: none;
    mix-blend-mode: normal;
    transform: translateZ(0);
  }

  /* Content transition */
  main {
    view-transition-name: main;
    contain: style layout;
  }

  ::view-transition-old(main) {
    animation: fade-out 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  }

  ::view-transition-new(main) {
    animation: fade-in 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes fade-out {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    ::view-transition-group(*),
    ::view-transition-old(*),
    ::view-transition-new(*) {
      animation: none;
    }
  }

  /* Performance optimizations */
  .banner-wrapper,
  aside {
    content-visibility: auto;
  }
</style>
